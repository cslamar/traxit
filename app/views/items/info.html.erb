    <h1><%= @active_widget.simple_name %></h1>
    <ol class="breadcrumb">
      <li><a href="/items"><i class="icon-dashboard"></i> Inventory</a></li>
      <li class="active"><i class="icon-file-alt"></i> <%= @active_widget.simple_name %></li>
