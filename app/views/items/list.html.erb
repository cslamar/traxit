<div class="row">
  <div class="col-lg-12">
    <%= link_to controller: 'items', action: 'new' do %>
      <button class="btn btn-primary pull-right"><span class="glyphicon glyphicon-plus"></span> Add</button>
    <% end %>
    <h1>Inventory <small> <%= @widget_list.count %> Items</small></h1>
    <ol class="breadcrumb">
      <li class="active"><i class="icon-file-alt"></i> Inventory</li>
    </ol>
  </div>
</div><!-- /.row -->

<div class="row">
	<div class="col-lg-12">
		<h2>Items</h2>
		<div class="table-responsive">
		  <table class="table table-hover tablesorter">
		  	<thead>
		  		<tr>
		  			<td></td>
			  		<td>Simple Name</td>
			  		<td>Category</td>
			  		<td>Location</td>
		  		</tr>
		  	</thead>
		  	<tbody>
		  		<% @widget_list.each do |w| %>
						<tr>
							<td>
								<%= link_to(action: "info", id: w) do %>
									<span class="label label-primary">Info</span>
								<% end %>
							</td>
							<td><%= w.simple_name %></td>
							<td>TODO Category</td>
							<td><%= w.location %></td>
						</tr>
					<% end %>
		  	</tbody>
		  </table>
		</div> <!-- .table-responsive -->
	</div> <!-- .col -->
</div> <!-- .row -->